@model List<MiniCMS.Models.Users> 
<a href="/SitesAdmin/InsertSiteAdmin" class="btn btn-primary"> Add New Site Admin</a>
    <div class="table-responsive">
        <table class="table table-striped jambo_table bulk_action">
            <thead>
                <tr class="headings">
                    
                    <th class="column-title">User Name </th>
                    <th class="column-title">Email </th>
                    <th class="column-title">Phone Number </th>
                    <th class="column-title">Status </th>
                    <th></th>
                    <th></th>
                    
                </tr>
            </thead>
           

            <tbody>
                @if (Model!=null)
                {


                    foreach (var item in Model)
                    {


                <tr class="even pointer">
                    
                    <td class=" ">@item.UserName</td>
                    <td class=" ">@item.Email</td>
                    <td class=" ">@item.PhoneNumber</td>
                    @{
                        if (item.isactive == true)
                        {
                            <td class=" " style="text-align:center"><i class="fa fa-check" style="color:#00ff21;font-size:xx-large"></i></td>;
                        }
                        else
                        {
                            <td class=" " style="text-align:center"><i class="fa fa-close" style="color:#ff0000;font-size:xx-large;"></i></td>;
                        }

                    }
                    <td>
                        <div class="text-center">

                            <a href="@Url.Action("Edit","SitesAdmin",new {id = item.Id })" class="btn btn-primary">
                                <i class="fa fa-edit"></i>
                                Edit
                            </a>

                        </div>
                    </td>
                    @{
                        if (item.isactive == true)
                        {
                            <td>
                                <div class="text-center">

                                    <a href="@Url.Action("DeleteUser","SitesAdmin",new { id = item.Id})" class="btn btn-danger">DiSsActive</a>

                                </div>
                            </td>
                        }
                        else
                        {
                            <td>
                                <div class="text-center">

                                    <a href="@Url.Action("DeleteUser","SitesAdmin",new { id = item.Id})" class="btn btn-success"> Active </a>

                                </div>
                            </td>
                        }

                    }

                </tr>
                    }
                 }
                 else
                 {
                    <tr>
                        <td>no data</td>
                    </tr>
                 }
            </tbody>
        </table>
    </div>
