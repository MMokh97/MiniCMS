@using MiniCMS.Models
@model SiteDataViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="">
    <div class="row">
        <div class="col-md-6 ">
            <div class="x_title">
                <h2>Add new Site Admin</h2>
                <div class="x_panel">
                    <div class="x_content">
                        <br />
                        @using (Html.BeginForm("Edit", "SitesAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model=>model.UserId)
                            <form class="form-label-left input_mask">
                                <div>
                                    <div class="form-group">
                                        <div class="form-group row">
                                            @Html.LabelFor(U => U.A_username, new { @class = "col-md-2 control-label" })
                                            <div class="col-md-6 col-sm-6  form-group has-feedback">
                                                @Html.TextBoxFor(U => U.A_username, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(U => U.A_username, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group row">
                                            @Html.LabelFor(E => E.A_Email, new { @class = "col-md-2 control-label" })
                                            <div class="col-md-6 col-sm-6  form-group has-feedback">
                                                @Html.TextBoxFor(E => E.A_Email, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(E => E.A_Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group row">
                                            @Html.LabelFor(PH => PH.A_phone, new { @class = "col-md-2 control-label" })
                                            <div class="col-md-6 col-sm-6  form-group has-feedback">
                                                @Html.TextBoxFor(PH => PH.A_phone, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(Ph => Ph.A_phone, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <span></span>

                                <div>
                                    <div class="form-group">
                                        
                                        

                                        <div class="form-group">
                                            <div class="form-group row">
                                                @Html.LabelFor(av => av.A_status, new { @class = "control-label col-md-2" })
                                                <div class="col-md-6 col-sm-6  form-group has-feedback">
                                                    @Html.CheckBoxFor(av => av.A_status, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(av => av.A_status, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        @*<label for="" style="width:30%;float:left">Availability</label>
                                            <input type="checkbox" class="form-control" style="width:40%;float:right" name="isavilable">*@
                                    </div>

                                </div>
                                <div class="ln_solid"></div>
                                <div>
                                    <h4>Site Data</h4>
                                    <div class="ln_solid"></div>
                                    <div class="form-group">
                                        <div class="form-group row">
                                            @Html.LabelFor(U => U.SiteName, new { @class = "col-md-2 control-label" })
                                            <div class="col-md-6 col-sm-6  form-group has-feedback">
                                                @Html.TextBoxFor(U => U.SiteName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(U => U.SiteName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group row">
                                            @Html.LabelFor(U => U.SiteName_AR, new { @class = "col-md-2 control-label" })
                                            <div class="col-md-6 col-sm-6  form-group has-feedback">
                                                @Html.TextBoxFor(U => U.SiteName_AR, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(U => U.SiteName_AR, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group row">
                                            @Html.LabelFor(model => model.SiteLogo, htmlAttributes: new { @class = "col-md-2 control-label" })
                                            <div class="col-md-6 col-sm-6  form-group has-feedback">
                                                <input type="file" id="logoimg" name="logoimg" class="form-control" />
                                                @Html.ValidationMessageFor(model => model.SiteLogo, "", new { @class = "text-danger" })
                                            <p>
                                                <img src="@Model.SiteLogo" style="width:100px;height:100px" />
                                            </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group row">
                                            @Html.LabelFor(model => model.SiteLogo_AR, htmlAttributes: new { @class = "col-md-2 control-label" })
                                            <div class="col-md-6 col-sm-6  form-group has-feedback">
                                                <input type="file" id="logoimg" name="logoimg_Ar" class="form-control" />
                                                @Html.ValidationMessageFor(model => model.SiteLogo_AR, "", new { @class = "text-danger" })
                                            <p>
                                                <img src="@Model.SiteLogo_AR" style="width:100px;height:100px" />
                                            </p>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group row">
                                    <div class="col-md-9 col-sm-9  offset-md-3">
                                        <a href="/SitesAdmin/Index" class="btn btn-primary"> Back to Home</a>
                                        <button type="submit" class="btn btn-success">Save</button>
                                    </div>
                                </div>

                            </form>
                        }
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
